# Server settings
YT_API_HOST=0.0.0.0
YT_API_PORT=8000

# Cache settings 
# YT_API_CACHE_DIR=/path/to/your/cache
YT_API_CACHE_LIMIT_GB=2.0
YT_API_CACHE_EXPIRY_DAYS=7
YT_API_AUTO_CLEAN_CACHE=True

# Download settings
YT_API_DEFAULT_QUALITY=720p
YT_API_MAX_SEARCH_RESULTS=50

# API settings
YT_API_ENABLE_CORS=True
YT_API_CORS_ORIGINS=["http://localhost:3000", "https://yourfrontend.com"]

# Rate limiting
YT_API_ENABLE_RATE_LIMIT=True
YT_API_RATE_LIMIT_REQUESTS=60
YT_API_RATE_LIMIT_WINDOW=60

# Security settings - IMPORTANT: Change this to a secure random string
YT_API_ADMIN_API_KEY=your_secure_admin_api_key_here

# FFMPEG settings - set if not in system PATH
# YT_API_FFMPEG_PATH=/path/to/ffmpeg
