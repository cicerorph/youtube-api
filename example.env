# Example environment configuration for multi-server setup

# Server settings
YT_API_HOST=0.0.0.0
YT_API_PORT=8000

# Cache settings
YT_API_CACHE_DIR=/tmp/youtube_api_cache
YT_API_CACHE_LIMIT_GB=1.0
YT_API_CACHE_EXPIRY_DAYS=7
YT_API_AUTO_CLEAN_CACHE=true

# Download settings
YT_API_DEFAULT_QUALITY=720p
YT_API_MAX_SEARCH_RESULTS=50

# API settings
YT_API_ENABLE_CORS=true
YT_API_CORS_ORIGINS=["*"]

# FFMPEG settings (optional, auto-detected if not set)
# YT_API_FFMPEG_PATH=/usr/bin/ffmpeg

# Rate limiting
YT_API_ENABLE_RATE_LIMIT=true
YT_API_RATE_LIMIT_REQUESTS=60
YT_API_RATE_LIMIT_WINDOW=60

# Security settings
YT_API_ADMIN_API_KEY=your-secret-admin-key

# ============= MULTI-SERVER CONFIGURATION =============

# Enable multi-server mode (set to true for both main and worker servers)
YT_API_MULTI_SERVER_ENABLED=false

# Main server configuration (set to true ONLY on the coordinator/main server)
YT_API_MULTI_SERVER_MAIN=false

# Worker server URLs (ONLY for main server - comma-separated list)
# Example: http://worker1.example.com:8000,http://worker2.example.com:8000
YT_API_MULTI_SERVER_URLS=[]

# ============= EXAMPLE CONFIGURATIONS =============

# --- Main Server Example ---
# YT_API_PORT=8000
# YT_API_MULTI_SERVER_ENABLED=true
# YT_API_MULTI_SERVER_MAIN=true
# YT_API_MULTI_SERVER_URLS=["http://localhost:8001", "http://localhost:8002"]

# --- Worker Server Example (Server 1) ---
# YT_API_PORT=8001
# YT_API_MULTI_SERVER_ENABLED=true
# YT_API_MULTI_SERVER_MAIN=false
# YT_API_CACHE_DIR=/tmp/youtube_api_cache_worker1

